<!DOCTYPE html>
<html lang="en">
<head>

  <% include ../partials/head %>

  <style media="screen">
    body{
      background: url(../../imgs/background.jpg) no-repeat;
      background-size: cover;
    }
  </style>
</head>
<body >

  <% include ../partials/nav %>

    <!--   Main Container   -->
  <div class="container center-align">
    <div class="section">
      <div class="row" style="padding:80px 0px 60px 0px;">
        <div class="col l2 m12">
        </div>
        <form class="col l8 m12" action="/posts/edit/<%= post.id %>?_method=PUT" method="POST">
          <div class="row">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <h4>Edit Post</h4>
                <div class="input-field col s12" style="margin-top:80px">
                  <input id="title" type="text" name="title" value="<%= post.title %>" required>
                  <label for="title">Title</label>
                </div>
                <div class="input-field col s12">
                  <textarea id="textarea1" name="content" class="materialize-textarea"  required><%= post.content %></textarea>
                  <label for="textarea1">Description</label>
                </div>
                <div class="input-field col s12">
                  <input type="text" class="validate" name="price" value="<%= post.price %>" required>
                  <label for="icon_prefix">Price</label>
                </div>
                <div class="input-field col s12">
                  <input type="text" class="validate" name="img" value="<%= post.img %>" required>
                  <label for="icon_prefix">Img URL</label>
                </div>
                <div class="input-field col s12">
                  <button class="waves-effect blue lighten-1 btn" type="submit">Udpate</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="../../js/materialize.js"></script>
  <script src="../../js/init.js"></script>
</body>
</html>
