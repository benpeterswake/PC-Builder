<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <body>

    <% include ../partials/nav %>

    <div class="top-text orange lighten-3">
      <div class="container">
          <h4>Choose RAM</h4>
      </div>
    </div>

      <!--   Main Container   -->
    <div class="container">
      <div class="section">
        <div class="row" style="padding:40px 0px 60px 0px">
          <table class="striped">
            <thead>
                <tr>
                    <th>RAM</th>
                    <th>Speed</th>
                    <th>Type</th>
                    <th>CAS</th>
                    <th>Modules</th>
                    <th>Size</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
              <% for(let i=0; i<ram.length; i++){ %>
                <tr>
                  <td><%= ram[i].make %> <%= ram[i].name %></td>
                  <td><%= ram[i].speed %></td>
                  <td><%= ram[i].type %></td>
                  <td><%= ram[i].cas %></td>
                  <td><%= ram[i].modules %></td>
                  <td><%= ram[i].size %>GB</td>
                  <td>$<%= ram[i].price %></td>
                  <td>
                    <form action="/products/ram/<%= ram[i].name %>/<%= ram[i].make %>/<%= ram[i].price %>/<%= ram[i].amazonlink %>/<%= ram[i].size %>/<%= ram[i]._id %>?_method=PUT" method="POST">
                      <input type="submit" value="Add">
                    </form>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

      <% include ../partials/footer %>
      <!--  Scripts-->
      <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="../js/materialize.js"></script>
      <script src="../js/init.js"></script>
  </body>
</html>
