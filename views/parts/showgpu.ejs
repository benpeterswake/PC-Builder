<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <body>

    <% include ../partials/nav %>

    <div class="top-text orange lighten-3">
      <div class="container">
          <h4>Choose GPU</h4>
      </div>
    </div>

      <!--   Main Container   -->
    <div class="container">
      <div class="section">
        <div class="row" style="padding:40px 0px 60px 0px">
          <table class="striped">
            <thead>
                <tr>
                    <th>GPU</th>
                    <th>Chipset</th>
                    <th>Base Clock</th>
                    <th>TDP</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
              <% for(let i=0; i<gpu.length; i++){ %>
                <tr>
                  <td><%= gpu[i].make %> <%= gpu[i].name %></td>
                  <td><%= gpu[i].chipset %></td>
                  <td><%= gpu[i].baseclock %></td>
                  <td><%= gpu[i].tdp %></td>
                  <td></td>
                  <td>
                    <form action="/products/gpu/<%= gpu[i].chipset %>/<%= gpu[i].make %>/<%= gpu[i].amazonlink %>/<%= gpu[i]._id %>?_method=PUT" method="POST">
                      <input type="submit" value="Add">
                    </form>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

      <% include ../partials/footer %>
      <!--  Scripts-->
      <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="../js/materialize.js"></script>
      <script src="../js/init.js"></script>
  </body>
</html>
