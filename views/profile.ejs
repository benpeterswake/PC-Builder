<!DOCTYPE html>
<html lang="en">
<head>

  <% include ./partials/head %>

  <style media="screen">
  body{
    background: url(imgs/background.jpg) no-repeat;
    background-size: cover;
  }
  </style>
</head>
<body>

  <% include ./partials/nav %>
    <!--   Main Container   -->
  <div class="container">
    <div class="section">
      <div class="row" style="padding:60px 0px 60px 0px;">
          <div class="col s12 m6">
            <div class="card blue-grey darken-1 center-align">
              <div class="card-content white-text">
                <h3>Profile</h3>
                <i class="material-icons dp48" style="font-size:100px">account_circle</i>
                <span class="card-title">Name</span>
                <%= user.first_name %> <%= user.last_name %>
              </div>
              <div class="card-content white-text">
                <span class="card-title">Username</span>
                <%= user.username %>
                <br><br>
              </div>
            </div>
          </div>
          <div class="col s12 m6">
            <div class="card blue-grey darken-1 center-align">
              <div class="card-content white-text">
                <h4>Your Posts</h4>
                <% if(posts.length === 0){ %>
                  <p style="padding-bottom:20px">Nothing here...</p>
                  <a class="btn" href="/posts/new">Create Post</a>
                <% } %>
                 <%  for(let i=0; i<posts.length; i++){ %>
                   <li style="font-size:18px;">
                    <a style="color:lightblue" href="/posts/<%=posts[i]._id %>"><%= posts[i].title %></a>
                  </li>
                 <% } %>
                 <br>
              </div>
            </div>
          </div>
          <div class="col s12 m6 white-text">

          </div>
        </div>
      </div>
    </div>
  </div>

  <!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="js/materialize.js"></script>
  <script src="js/init.js"></script>
</body>
</html>
