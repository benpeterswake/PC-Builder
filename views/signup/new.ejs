<!DOCTYPE html>
<html lang="en">
<head>

  <% include ../partials/head %>

  <style media="screen">

  </style>
</head>
<body>

  <% include ../partials/nav %>

  <div class="top-text orange lighten-3">
    <div class="container">
        <h4>Sign Up!</h4>
    </div>
  </div>

    <!--   Main Container   -->
  <div class="container">
    <div class="section">
      <div class="row" style="padding:60px 0px 60px 0px;">
        <form class="col s4" action="/signup/new" method="POST">
          <div class="row">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text" style="height:340px">
                <h4>Create Account</h4>
                <div class="input-field col s12">
                  <i class="material-icons prefix">account_circle</i>
                  <input type="text" name="username" required>
                  <label for="icon_prefix">Username</label>
                </div>
                <div class="input-field col s12">
                  <i class="material-icons prefix">lock</i>
                  <input type="password" name="password" required>
                  <label for="icon_telephone">Password</label>
                </div>
                <div class="input-field col s12">
                  <button class="waves-effect blue lighten-1 btn" type="submit">Sign Up</button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="js/materialize.js"></script>
  <script src="js/init.js"></script>
</body>
</html>
